<div class="card">
    <div class="card-header d-flex flex-column justify-content-between align-items-center">
        <h2>{{image.title}}</h2>

        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">

            <i class="fa fa-time"></i>Delete
        </button>
        <div class="card-body" >
             <p>{{image.description}}</p>
             <div class="text-center">
                 <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid w-100 h-100" >
             </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
    
            <i class="fas fa-thumbs-up"></i>Like
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye">{{image.views}}</i>
        </p>
        <p>
            <i class="far fa-clock"></i>
            {{timeago timestamp}}
        </p>
    </div>
</div>
<div class="card mt-4">

    <div class="card-header d-flex justify-content-between">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comments">

            <i class="fa fa-comment-o mr-2"></i> Post a comment
        </button>
    </div>

    <div class="card-body">
        <blockquote>
            <form action="/images/{{image.uniqueId}}" method="post"></form>
        </blockquote>
    </div>

</div>
